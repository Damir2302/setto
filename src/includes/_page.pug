doctype html
html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")

        title= title || 'Page name'

        // Styles::Start
        include _loadCss
        // Styles::End

    body(class= bodyClass ? bodyClass : '')

        #page

            // Header::Start
            block header
                include _header
            // Header::End

            // Main::Start
            main#main
                block main
            // Main::End

            // Footer::Start
            block footer
                include _footer
            // Footer::End

        // Popup
        .popup.animate__animated.animate__fadeIn.hide
            .popup-container

                // Выбор города::Start
                .geo-popup
                    .geo-popup-container
                        .geo-window-main.hide
                            .popup-close
                            span Ваш город
                            p Москва
                            .geo-action-buttons
                                a.geo-action-btn.geo-action-btn--true(href="#") Да, спасибо
                                a.geo-action-btn.geo-action-btn--false(href="#") Нет, другой

                        .geo-window-list.hide
                            .popup-close
                            p.geo-list-title Выберите город
                            .geo-search-input
                                input(type="text" placeholder="Введите название города")
                                .geo-search-remove
                            .geo-search-variants
                                p Например:
                                a.geo-search-variant(href="#") Казань
                                a.geo-search-variant(href="#") Тверь
                                p или
                                a.geo-search-variant(href="#") Выбрать автоматически
                            .geo-search-items
                                a.geo-search-link.selected(href="#") Москва
                                a.geo-search-link(href="#") Казань
                                a.geo-search-link(href="#") Тверь
                // Выбор города::End

                // Авторизация::Start
                .popup-auth.animate__animated.animate__fadeIn

                    .popup-auth__inner

                        .close-auth

                        h3.auth__title Авторизация

                        .auth__label(data-index="0")
                            .auth__tab(data-active="0") Вход
                            .auth__tab(data-active="1") Регистрация

                        .auth__body(data-show="0")

                            // Логин
                            .auth__login.animate__animated.animate__fadeIn

                                form
                                    .input-style
                                        label.input-label Логин
                                        input(type="text" required)

                                    .input-style
                                        label.input-label Пароль
                                        input(type="password" required)

                                    .form-bottom
                                        .auth__checkbox
                                            label.input-checkbox-circle(for="remember")
                                                input#remember(type="checkbox", name="" aria-hidden="true")
                                                .checkbox-bg
                                            span Запомнить меня
                                        a.forgot-pass(href="#") Забыли пароль

                                    button#submitLogin.button-style.button-style--orange(type="submit") Войти

                            // Регистрация
                            .auth__register.animate__animated.animate__fadeIn

                                form(method="POST" name="registration")
                                    .input-style
                                        label.input-label Логин
                                        input(type="text" name="login" required)

                                    .input-style
                                        label.input-label E-mail
                                        input(type="email" name="email" required)

                                    .input-style
                                        label.input-label Пароль
                                        input(type="password" name="password" required)
                                        .pass-view

                                    .input-style
                                        label.input-label Подтверждение пароля
                                        input(type="password" name="confirm_password" required)
                                        .pass-view

                                    .form-bottom
                                        .auth__checkbox
                                            label.input-checkbox-circle(for="policy")
                                                input#policy(type="checkbox", name="agree" required aria-hidden="true")
                                                .checkbox-bg
                                            span.policy-info Я согласен на обработку <a href="#">персональных данных</a>

                                    button#submitRegist.button-style.button-style--orange(type="submit") Зарегистрироваться
                // Авторизация::End

        // Scripts::Start
        include _loadScripts
        // Scripts::End