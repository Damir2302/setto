doctype html
html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")

        title= title || 'Page name'

        // Styles::Start
        include _loadCss
        // Styles::End

    body(class= bodyClass ? bodyClass : '')

        #page

            // Header::Start
            block header
                include _header
            // Header::End

            // Main::Start
            main#main
                block main
            // Main::End

            // Footer::Start
            block footer
                include _footer
            // Footer::End

        // Popup
        .popup.animate__animated.animate__fadeIn.hide
            .popup-container

                // Выбор города::Start
                .geo-popup
                    .geo-popup-container
                        .geo-window-main.hide
                            .popup-close
                            span Ваш город
                            p Москва
                            .geo-action-buttons
                                a.geo-action-btn.geo-action-btn--true(href="#") Да, спасибо
                                a.geo-action-btn.geo-action-btn--false(href="#") Нет, другой

                        .geo-window-list
                            .popup-close
                            p.geo-list-title Выберите город
                            .geo-search-input
                                input(type="text" placeholder="Введите название города")
                                .geo-search-remove
                            .geo-search-variants
                                p Например:
                                a.geo-search-variant(href="#") Казань
                                a.geo-search-variant(href="#") Тверь
                                p или
                                a.geo-search-variant(href="#") Выбрать автоматически
                            .geo-search-items
                                a.geo-search-link.selected(href="#") Москва
                                a.geo-search-link(href="#") Казань
                                a.geo-search-link(href="#") Тверь
                // Выбор города::End

        // Scripts::Start
        include _loadScripts
        // Scripts::End